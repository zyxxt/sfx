#!/usr/bin/env node --harmony

let commander = require('commander');
// let pad = require('pad');
let sfx = require('../index');
const PACKAGE_JSON = require('../package.json');

require('../util/logger');

console.log(`Welcome to sfx cli tool (version: ${PACKAGE_JSON.version}), use "sfx --help" show more options.
`);

commander
    .version(PACKAGE_JSON.version)
    .usage('<command> [options]')
    .option('--nolint', 'remove eslint')
    .description(`
        For Example:
            sfx init vue
    `);

commander
    .command('init <template>')
    .description('init folder like yeoman')
    .action((...args) => {
        sfx.init(...args);
    });

commander
    .command('build')
    .description('build for production')
    .action((...args) => {
        sfx.build(...args);
    });

commander
    .command('dev [address]')
    .description('run a local server for debug')
    .action(address => {
        sfx.dev(address);
    });

commander
    .command('eslint [files...]')
    .description('run eslint')
    .action((files) => {
        sfx.eslint(files);
    });


commander.parse(process.argv);

