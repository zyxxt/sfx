#!/usr/bin/env node --harmony

let commander = require('commander');
let pad = require('pad');
let sfx = require('../index');

const INIT_ACTION = [];


commander
    .version(require('../package.json').version)
    .usage('<command>')
    .description(`
        For Example:
            sfx init vue | ac | hci
            sfx eslint
            sfx build
            sfx dev
            sfx test
    `);

commander
    .command('init <template>', 'init sfis | vue | react')
    .action(name => {
        commander.help();
        process.exit(1);
    });

commander
    .command('build')
    .action((...args) => {
        sfx.build(...args);
    });

commander
    .command('dev')
    .action((...args) => {
        sfx.dev(...args);
    });

commander
    .command('eslint')
    .action((...args) => {
        let argv = args.slice(0, -1);
        sfx.eslint(...argv);
    });


commander.parse(process.argv);